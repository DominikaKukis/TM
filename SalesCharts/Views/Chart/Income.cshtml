<html>

<head>
    <script src="~/Scripts/Chart.js"></script>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />

    <style>
        #chart_container {
            width: 800px;
            height: 400px;
            border: 1px solid #ddd;
            padding: 1px;
            border-radius: 4px;
        }
    </style>

</head>

<body>

    <div id="chart_container">
        <canvas id="line_chart"></canvas>

    </div>

    <script>

        var incomeA = @Html.Raw(Json.Encode(ViewBag.incomeA));
        var incomeB = @Html.Raw(Json.Encode(ViewBag.incomeB));

        var dates = [];

        @foreach(var item in ViewBag.DATES)
        {
            @:dates.push("@item");
        }


        var ctx = $("#line_chart");
        var lineChart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: dates,
                datasets: [
                    {
                        label: "ProductA",
                        data: incomeA,
                        backgroundColor: ["rgba(152,166,54,.5)", "rgba(145,65,72,.5)", "rgba(74,25,92,.5)"],
                        borderColor: ["rgb(152, 166, 54)", "rgb(145,65,72)", "rgb(74,25,92)"],
                        borderWidth: 1
                    },
                    {
                        label: "ProductB",
                        data: incomeB,
                        backgroundColor: ["rgba(242,166,54,.5)", "rgba(145,65,72,.5)", "rgba(74,25,92,.5)"],
                        borderColor: ["rgb(242, 166, 54)", "rgb(145,65,72)", "rgb(74,25,92)"],
                        borderWidth: 1
                    }
                ]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: { xAxis: [{ ticks: { beginAtZero: true } }] },
                legend: {disply:false}
            },
            scales: {
                xAxes: [{
                    scaleLabel: {
                        display: true,
                    }
                }],
                yAxes: [{
                    scaleLabel: {
                        display: true,
                    }
                }]
            }
        });
    </script>

</body>

</html>

